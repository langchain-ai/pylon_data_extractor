# Pylon API Configuration
PYLON_API_BASE_URL=https://api.usepylon.com
PYLON_API_TIMEOUT=60
PYLON_MAX_RETRIES=3
PYLON_RETRY_DELAY=1
PYLON_API_KEY=KEY_GOES_HERE

# LLM Configuration - if you don't have this as an ENV variable already
# OPENAI_API_KEY=KEY_GOES_HERE

# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=KEY_GOES_HERE
LANGCHAIN_PROJECT=pylon-data-classifier

# BigQuery Configuration
BIGQUERY_PROJECT_ID=langchain-prod
BIGQUERY_DATASET_ID=src_pylon
BIGQUERY_SERVICE_ACCOUNT_KEY_PATH=SERVICE_ACCOUNT_JSON_GOES_HERE
BIGQUERY_LOCATION=US

# Replication Configuration
REPLICATION_BATCH_SIZE=1000
REPLICATION_MAX_WORKERS=4
REPLICATION_INCREMENTAL_COLUMN=updated_at
REPLICATION_FULL_REFRESH=false

# Logging
LOG_LEVEL=INFO